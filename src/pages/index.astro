<style>
  .text-highlight {
    color: var(--color-text);
  }

  main {
    display: grid;
    place-items: center;
    width: 306px;
    margin-left: auto;
    margin-right: auto;
    margin-top: 33vh;
    gap: 48px;
  }

  .intro-heading {
    display: flex;
    align-items: center;
    gap: 8px;
    width: 100%;
  }

  .intro-heading > h1:nth-of-type(2) {
    color: var(--color-text-secondary);
  }

  .intro-heading > svg {
    width: 20px;
    height: 20px;
    color: var(--color-accent);
  }

  .row {
    display: flex;
    justify-content: space-between;
    width: 100%;
  }

  .col {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
</style>
